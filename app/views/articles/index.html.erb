<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<%
=begin %>
 <%= search_form_for @q do |f| %>
  <div class="field">
    <%= f.label:title_or_body_or_id_cont,"Search " %>
    <%= f.search_field:id_or_title_or_body_cont %>
</div>
<% end %>
<%
=end %>
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Title</th>
      <th>Body</th>
      </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
    <% #if article.user == current_user %>
      <tr>
        <td><%= link_to article.title , article %></td> 
        <td><%= article.body %></td>
      </tr>
      <% #end %>
    <% end %>
  </tbody>
</table>
<%= paginate @articles%>
</br>